<!DOCTYPE HTML>
<html>
    <head>
      <% include ../include/commonHead %>
    </head>
    <body>
      <div class="container">
        <div class="jumbotron"><h1>Benutzer</h1></div>
        
        <% if (message) { %>
          
          <div class="alert alert-<%-message.indexOf("OK")<0?'warning':'success'%>"><%-message%></div>
        
        <% } %>
        
        <br>
        
        <p><%=colony.description%>:</p>
        
        <ul>
        
          <% for (var i = 0; i < users.length; i++) { %>
          
            <li><%=users[i].username%> <%-users[i].superuser?'<strong>[admin]</strong>':''%> <a href="/users/edit/<%=users[i]._id%>">Bearbeiten</a>
            </li>
          
          <% } %>
        
        </ul>
        
        <a href="/user/new">Neuer Benutzer</a>
        
        <% if (false) { %>
        
          <br><br>Benutzer importieren:<br>
          
          <select name="importedUser">
            <% for (var i = 0; i < otherUsers.length; i++) { %>
              <option><%=otherUsers[i].colony + "/" + otherUsers[i].user.username%></option>
            <% } %>
          </select>
          
          <br>
        
        <% } %>
        
        <hr>
        
        <a href="/<%=root?'root':'home'%>">zurÃ¼ck</a>
        
        <div style="height:300px"></div>
      </div>
    </body>
</html>
